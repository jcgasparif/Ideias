@using Tatu.Marchesan.Ideias.Domain.Entities.Models;
@model RelevanciasModel;

<div class="row wrapper border-bottom white-bg page-heading ">
    <div class="col-lg-9">
        <h2>Gestão de Relevâncias</h2>
        <small>Edite uma relevância previamente cadastrada no sistema</small>
    </div>
</div>
<div class="wrapper wrapper-content animated">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title header-blue">
                    <h5>Editar Relevância</h5>
                </div>
                <div class="ibox-content">
                    <form asp-controller="Relevancia" asp-action="Edit">
                        <input type="hidden" asp-for="Id" />
                        <input hidden id="@Model.Id" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Descrição</label>
                            <div class="col-sm-10">
                                <input asp-for="Descricao" class="form-control">
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label class="col-sm-2 col-form-label">Peso</label>
                            <div class="col-sm-10">
                                <input asp-for="Peso" class="form-control">
                                <span asp-validation-for="Peso" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-12 text-right">
                                <a class="btn btn-white" asp-controller="Relevancia" asp-action="Index">Cancelar</a>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script async src="~/js/relevancia.min.js" asp-append-version="true"></script>
}