@using Tatu.Marchesan.Ideias.App.ViewModels

@model IEnumerable<ComiteViewModel>

<div class="row wrapper border-bottom white-bg page-heading ">
    <div class="col-lg-9">
        <h2>Gestão de Comitê</h2>
        <small>Visualize os detalhes da avaliação de uma ideia</small>
    </div>
</div>
<div class="wrapper wrapper-content animated">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <partial name="_DetalhesIdeia" model="@ViewBag.DetalhesIdeia" />
                <div class="ibox-title header-blue">
                    <h5>Análises</h5>
                </div>
                <div class="ibox-content">
                    @{
                        if (Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <div class="ibox-title header-blue">
                                    <h5>@item.UserName</h5>
                                </div>
                                <div class="ibox-content" style="margin-bottom: 15px;">
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Análise</label>
                                        <label class="col-sm-10 col-form-label">@item.Descricao</label>
                                    </div>
                                    <div class="hr-line-dashed"></div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Relevância</label>
                                        <div class="form-group row">
                                            <div class="col-sm-12">
                                                <select asp-for="@item.RelevanciaId" class="form-control m-b" asp-items="ViewBag.Relevancia" disabled></select>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p>Nenhuma análise encontrada</p>
                        }
                    }
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-12 text-right">
                            <a class="btn btn-white" asp-controller="Comite" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script async src="~/js/comite.min.js" asp-append-version="true"></script>
}