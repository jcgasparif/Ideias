@{ Layout = null; }

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TATU Marchesan - Painel de Ideias</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/favicontatu.png" type="image/x-icon" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
    <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
</head>
<body class="gray-bg">
    <div class="loginColumns animated">
        <div class="row">
            <div class="col-md-6 bottom-space">
                <div class="ibox-content p-0 header-blue pb-1">
                    <div class="dropdown profile-element text-center">
                        <img alt="image" src="~/Images/logotatu2019.png" class="text-center tatu-logo" /><br />
                        <div class="label label-primary text-center tatu-logo-title">MARCHESAN</div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ibox-content p-0 border-0">
                    <div class="ibox-title header-blue">
                        <h3><i class="fa fa-mail-forward"></i>&nbsp;&nbsp;Esqueci a Senha</h3>
                    </div>
                </div>
                <div class="ibox-content pb-3">
                    <form asp-action="ForgotPassword" asp-controller="Account" method="post">
                        <div class="form-group">
                            <label>Informe o seu e-mail</label>
                            <input name="email" class="form-control" />
                        </div>
                        <div class="text-right">
                            <a class="btn btn-white" type="button" asp-action="Index" asp-controller="Home">Voltar</a>
                            <button class="btn btn-primary" type="submit">Recuperar senha</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script async src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
<script async src="~/lib/pace/pace.min.js"></script>
