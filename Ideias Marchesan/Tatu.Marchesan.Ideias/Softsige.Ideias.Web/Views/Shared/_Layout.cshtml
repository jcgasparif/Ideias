<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TATU Marchesan - Painel de Ideias</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/favicontatu.png" type="image/x-icon" />

    <!-- Add local styles, mostly for plugins css file -->
    @if (IsSectionDefined("Styles"))
    {
        @await RenderSectionAsync("Styles", false)
    }

    <environment names="Development,Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/lib/datapicker/datepicker3.min.css" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
    </environment>
</head>
<body>
    <!-- Wrapper-->
    <div id="wrapper" class="@Html.PageClass()">

        <!-- Navigation -->
        <partial name="_Navigation" />

        <!-- Page wraper -->
        <div id="page-wrapper" class="gray-bg @ViewBag.SpecialClass">

            <!-- Top Navbar -->
            <partial name="_TopNavbar" />

            <!-- Main view  -->
            @RenderBody()

            <!-- Footer -->
            <partial name="_Footer" />
        </div>
        <!-- End page wrapper-->
    </div>
    <!-- End wrapper-->

    <environment names="Development,Staging,Production">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script async src="~/lib/datapicker/bootstrap-datepicker.min.js"></script>
        <script async src="~/lib/Popper/popper.min.js"></script>
        <script async src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script async src="~/lib/metisMenu/dist/jquery.metisMenu.min.js"></script>
        <script async src="~/lib/pace/pace.min.js"></script>
        <script async src="~/lib/slimScroll/jquery.slimscroll.min.js"></script>
        <script async src="~/js/site.min.js" asp-append-version="true"></script>
    </environment>
    @await RenderSectionAsync("scripts", false)
    <partial name="_ValidationScriptsPartial" />
</body>
</html>