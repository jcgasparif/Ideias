@using Softsige.Ideias.App.Models;

@model User

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-9">
        <h2>Gestão de Usuários</h2>
        <small>Utilize esta página para cadastrar um usuário no sistema</small>
    </div>
</div>
<div class="wrapper wrapper-content animated">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox ">
                <div class="ibox-title header-blue">
                    <h5>Novo usuário</h5>
                </div>
                <div class="ibox-content">
                    <form method="post" asp-controller="Admin" asp-action="Create" autocomplete="off">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Name" class="form-control" autocomplete="off">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Email" class="form-control" autocomplete="new-email">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                            <div class="col-sm-10">
                                <input asp-for="Password" class="form-control" autocomplete="new-password">
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group row">
                            <div class="col-sm-12 text-right">
                                <a class="btn btn-white" asp-controller="Admin" asp-action="Index">Cancelar</a>
                                <button type="submit" class="btn btn-primary">Salvar</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script async src="~/js/usuario.min.js" asp-append-version="true"></script>
}