@page
@model LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TATU Marchesan - Painel de Ideias</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="shortcut icon" href="~/favicontatu.png" type="image/x-icon" />
    <link rel="apple-touch-icon" href="~/favicontatu.png" />

    <environment names="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/lib/font-awesome/css/font-awesome.min.css" />
        <link rel="stylesheet" href="~/css/animate.css" />
        <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    </environment>
</head>

<body class="gray-bg">
    <div class="loginColumns animated fadeInDown">
        <div class="row">
            <div class="col-md-6" style="color: #fff; background-color: #00428c;">
                <div class="dropdown profile-element text-center">
                    <img alt="image" src="~/Images/logotatu2019.png" class="text-center" style="width: 320px;padding-top:20px !important;" /><br />
                    <div class="label label-primary text-center" style="font-size:32px;padding-top:10px !important;padding-bottom: 10px !important;">MARCHESAN</div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="ibox-content" style="padding:0;">
                    <div class="ibox-title" style="color: #fff;background-color: #00428c;border-color:#00428c;">
                        <h3><i class="fa fa-comments"></i>&nbsp;&nbsp;Painel de ideias</h3>
                    </div>
                </div>
                <div class="ibox-content">fdsfsdfsdfs
                    <form id="account" method="post">
                        <div class="form-group">
                            <label asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" placeholder="Digite seu email..." />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" placeholder="Digite sua senha..." />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}